<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.demo.smokingcontrolapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
        android:windowSoftInputMode="adjustPan"
        tools:ignore="AllowBackup">
        <activity android:name=".activities.search.SearchActivity"></activity>
        <activity android:name=".activities.chat_list.ChatListActivity" />
        <activity
            android:name=".activities.admin.AdminActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.profile.ProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.chat.ChatActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.achievement.AchievementActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.target.TargetActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.home.HomeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.fogot_password.ForgotPasswordActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.change_password.ChangePasswordActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.sign_up.SignUpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.main.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.sign_in.SignInActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>