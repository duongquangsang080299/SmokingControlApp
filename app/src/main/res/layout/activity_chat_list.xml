<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bacground_home"
    android:layout_height="match_parent"
    tools:context=".activities.chat_list.ChatListActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_chat_list"
        app:menu="@menu/menu"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:layout_constraintTop_toTopOf="parent"/>
    <Button
        android:id="@+id/btnDoctor"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:padding="10dp"
        android:text="Consulting doctor"
        android:textColor="#000000"
        android:background="@drawable/custom_button"
        app:layout_constraintTop_toBottomOf="@id/tb_chat_list"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_chat_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/btnDoctor"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>